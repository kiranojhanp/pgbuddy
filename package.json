{
  "name": "pgbuddy",
  "version": "0.2.0",
  "description": "A lightweight set of helper functions for Postgres.js to simplify simple CRUD operations.",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.mts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "biome check src/ tests/ examples/",
    "lint:fix": "biome check --write src/ tests/ examples/",
    "format": "biome format --write src/ tests/ examples/",
    "release": "npx bumpp --commit --push --tag",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:types": "tsc -p tsconfig.types.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiranojhanp/pgbuddy.git"
  },
  "keywords": [
    "pgbuddy",
    "postgres",
    "postgres.js",
    "sql",
    "crud",
    "query-builder",
    "helper-functions"
  ],
  "author": "Kiran Ojha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiranojhanp/pgbuddy/issues"
  },
  "homepage": "https://github.com/kiranojhanp/pgbuddy#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@electric-sql/pglite": "^0.3.15",
    "@electric-sql/pglite-socket": "^0.0.20",
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "postgres": "^3.4.5",
    "zod": "^3.24.1"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  }
}