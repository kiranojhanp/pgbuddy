{
  "name": "pgbuddy",
  "version": "0.0.17",
  "description": "A lightweight set of helper functions for Postgres.js to simplify simple CRUD operations.",
  "files": [
    "dist/*"
  ],
  "types": "dist/index.d.mts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:kiranojhanp/pgbuddy.git"
  },
  "keywords": [
    "pgbuddy",
    "postgres",
    "postgres.js",
    "sql",
    "crud",
    "query-builder",
    "helper-functions"
  ],
  "author": "Kiran Ojha",
  "license": "MIT",
  "bugs": {
    "url": "git@github.com:kiranojhanp/pgbuddy.git/issues"
  },
  "homepage": "git@github.com:kiranojhanp/pgbuddy.git#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "ts-jest": "^29.3.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "postgres": "^3.4.5"
  }
}